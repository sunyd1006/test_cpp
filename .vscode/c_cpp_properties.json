{
    /* 
        c_cpp_properties.json 配置文件
        https://code.visualstudio.com/docs/cpp/c-cpp-properties-schema-reference
        https://blog.csdn.net/qq_34801642/article/details/106419763
    */
    "configurations": [
        {
            "name": "Mac",
            // IntelliSense 用于查找头文件的目录
            // ${workspaceFolder}/**表示要搜索workspace的子目录，而不包括workspace目录
            "includePath": [
                "${workspaceFolder}/**",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/c++/v1",
                // "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.5/include",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
                "/Library/Developer/CommandLineTools/usr/include",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "defines": [],
            "macFrameworkPath": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "gnu17",
            "cppStandard": "gnu++17",
            "intelliSenseMode": "macos-gcc-arm64",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/.odps_build_dependencies/**",
                "apsara/alicpp/built/**"
                // "usr/include/**",
            ],
            "defines": [],
            "macFrameworkPath": [],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "gnu11",
            "cppStandard": "c++11",
            // Linux: gcc-x64; macOs: clang-x64
            "intelliSenseMode": "gcc-x64", 
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ],
    "version": 4
}